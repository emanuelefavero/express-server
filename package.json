{
  "name": "express-server",
  "version": "1.0.0",
  "description": "This is a simple Express server template set up with TypeScript for building RESTful APIs.",
  "main": "index.js",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "build": "rm -rf dist && tsc && tsc-alias",
    "start": "node --env-file .env dist/src/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "db": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:push": "dotenv -e .env -- npx prisma db push",
    "db:migrate": "dotenv -e .env -- npx prisma migrate dev",
    "db:seed": "dotenv -e .env -- npx prisma db seed"
  },
  "keywords": [],
  "author": "Emanuele Favero <emafaux89@gmail.com> (https://emanuelefavero.com/)",
  "license": "MIT",
  "type": "module",
  "imports": {
    "#src/*": "./src/*"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "6.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/eslint-plugin": "^1.4.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.8"
  }
}
