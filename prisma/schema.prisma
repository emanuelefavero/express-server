datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  EMPLOYEE
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     Role   @default(EMPLOYEE)
}

model Product {
  id       String @id @default(cuid())
  name     String
  quantity Int     @default(0)
  category String?
}
